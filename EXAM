        <!-- LEFT COLUMN: INGREDIENTS -->
        <td width="45%" bgcolor="#fff8dc">
            <center><h2><u><font color="#b22222">Ingredients</font></u></h2></center>

            <table border="2" bordercolor="#deb887" cellpadding="5" cellspacing="0" width="100%">
                <tr bgcolor="#ffdead">
                    <th>Ingredient</th>
                    <th>Amount</th>
                </tr>
                <tr><td>Pork belly (liempo), sliced</td><td>500g</td></tr>
                <tr><td>Coconut milk (gata)</td><td>2 cups</td></tr>
                <tr><td>Shrimp paste (bagoong alamang)</td><td>2 tbsp</td></tr>
                <tr><td>Green chili peppers</td><td>6‚Äì8 pcs</td></tr>
                <tr><td>Red chili (optional)</td><td>2 pcs</td></tr>
                <tr><td>Garlic, minced</td><td>4 cloves</td></tr>
                <tr><td>Onion, chopped</td><td>1 medium</td></tr>
                <tr><td>Ginger, sliced</td><td>1 tbsp</td></tr>
                <tr><td>Salt & Pepper</td><td>To taste</td></tr>
            </table>
        </td>

        <!-- RIGHT COLUMN: MAIN IMAGE -->
        <td width="55%" align="center" bgcolor="#fffaf0">
